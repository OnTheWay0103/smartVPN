{
  "name": "smartvpn",
  "version": "1.0.0",
  "description": "智能代理系统，支持TLS加密通信、自动代理设置和白名单域名过滤",
  "main": "src/client/index.js",
  "bin": {
    "smartvpn": "./bin/smartvpn"
  },
  "scripts": {
    "start": "NODE_ENV=client node src/client/index.js",
    "start:prod": "NODE_ENV=production node src/client/index.js",
    "server": "NODE_ENV=server node src/server/index.js",
    "server:prod": "NODE_ENV=production node src/server/index.js",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:debug": "node tests/run-tests.js",
    "test:config": "node tests/debug/verify-config.js",
    "test:server-config": "node tests/debug/verify-server-config.js",
    "test:connection": "node tests/integration/test-connection.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "dev": "nodemon src/client/index.js",
    "dev:server": "nodemon src/server/index.js",
    "setup": "node scripts/setup/initial-setup.js",
    "cert:generate": "./scripts/setup/generate-certs.sh",
    "lint": "eslint src/**/*.js tests/**/*.js",
    "lint:fix": "eslint src/**/*.js tests/**/*.js --fix",
    "format": "prettier --write src/**/*.js tests/**/*.js",
    "docs": "jsdoc -c jsdoc.json"
  },
  "keywords": [
    "vpn",
    "proxy",
    "tls",
    "encryption",
    "network",
    "security",
    "client",
    "server"
  ],
  "author": "OnTheWay0103",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:OnTheWay0103/smartVPN.git"
  },
  "bugs": {
    "url": "https://github.com/OnTheWay0103/smartVPN/issues"
  },
  "homepage": "https://github.com/OnTheWay0103/smartVPN#readme",
  "engines": {
    "node": ">=12.0.0"
  },
  "dependencies": {
    "regedit": "^3.0.3"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "jest": "^30.0.5",
    "jsdoc": "^3.6.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.0"
  },
  "os": [
    "win32",
    "darwin"
  ],
  "files": [
    "src/client/",
    "src/server/",
    "src/shared/",
    "config/",
    "certs/",
    "tools/",
    "README.md",
    "CONTRIBUTING.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ]
  }
}
